{
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Calculator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Calculator\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    }
}
